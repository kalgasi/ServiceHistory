<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rzk.servicehistory"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.rzk.servicehistory.MenuActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.rzk.servicehistory.AddServiceActivity"
            android:label="@string/title_activity_add_service" >
        </activity>
        <activity
            android:name="com.rzk.servicehistory.ShowService"
            android:label="@string/title_activity_show_service" >
        </activity>
        <activity
            android:name="com.rzk.servicehistory.ServiceHistory"
            android:label="@string/title_activity_service_history" >
        </activity>
        <activity
            android:name="com.rzk.servicehistory.AllServiceHistoryActivity"
            android:label="@string/title_activity_all_service_history" >
        </activity>
        <activity
            android:name="com.rzk.servicehistory.ServiceDetailActivity"
            android:label="@string/title_activity_service_detail" >
        </activity>
        <activity
            android:name="com.rzk.servicehistory.RootMenuActivity"
            android:label="@string/title_activity_root_menu" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rzk.servicehistory.AddVehicleActivity"
            android:label="@string/title_activity_add_vehicle" >
        </activity>
        <activity
            android:name="com.rzk.servicehistory.AddReminder"
            android:label="@string/title_activity_add_reminder" >
        </activity>
        <activity
            android:name="com.rzk.servicehistory.ViewReminderActivity"
            android:label="@string/title_activity_view_reminder" >
        </activity>
        <activity
            android:name="com.rzk.servicehistory.ViewAllReminder"
            android:label="@string/title_activity_view_all_reminder" >
        </activity>

        <receiver android:name="com.rzk.servicehistory.AlarmReceiver" >
            <intent-filter>
                <action android:name=".Alarmreceiver" />
            </intent-filter>
        </receiver>
    </application>

</manifest>