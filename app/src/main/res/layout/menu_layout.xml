<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MenuActivity">
    <Button
        android:id="@+id/button_add_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_add_service"
        android:onClick="addServiceHistory"
        android:layout_centerInParent="true"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/button_view_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_show_last_service"
        android:onClick="viewLastServiceHistory"
        android:layout_below="@+id/button_add_service"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/button_view_all_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_show_all_service"
        android:onClick="viewAllServiceHistory"
        android:layout_below="@+id/button_view_service"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"/>



</RelativeLayout>
